{% for key, article in articles %}
<div class='articleDiv'>

        <div class='topLine' id="{{ article['id'] }}">
                {# ARTICLE HEADER #}
                <a href='{{ path("article_detail") }}/{{ article['id'] }}' style='color: black' title='Zobrazit článek na celou obrazovku'>
                        {{ article['header'] }}
                </a>
                {# /ARTICLE HEADER/ #}
        </div>

        <div class='bottomLine'>
                {# ARTICLE CONTENT #}
                <a href='{{ path("article_detail") }}/{{ article['id'] }}' style='color: black' title='Zobrazit článek na celou obrazovku'>
                        {{ article['content']|raw }}
                </a>
                {# /ARTICLE CONTENT/ #}

                {# COMMENT FORM #}
                <div class="comment" style="bottom: 0;float: bottom">
                        {{ form_start(arrayForms[article['id']]) }}
                                {{ form_row(arrayForms[article['id']].user_id, {'id': 'comment_user_id_' ~ article['id']}) }}
                                {{ form_row(arrayForms[article['id']].article_id, {'attr': {'value': article['id']}, 'id': 'comment_article_id_' ~ article['id']}) }}
                                {{ form_row(arrayForms[article['id']].comment, {'id': 'comment_comment_' ~ article['id']}) }}
                                {{ form_row(arrayForms[article['id']]._token, {'id': 'comment_token_' ~ article['id']}) }}
                                <input type="submit" value="Odeslat">
                        {{ form_end(arrayForms[article['id']]) }}
                </div>
                {# /COMMENT FORM/ #}

                {# COMMENTS #}
                <div class="comment">
                        {% for key, comment in comments %}

                                {% if comment['article_id'] == article['id'] %}
                                        <div class="comment-value">
                                                <span style="color: #0f81cc;font-weight: bold">{{ comment['user_name'] }}: </span>
                                                <span>{{ comment['comment'] }}</span>
                                        </div>
                                {% endif %}

                        {% endfor %}
                </div>
                {# /COMMENTS/ #}
        </div>

</div>
{% endfor %}